<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/item_product_divider_color"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:background="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/product_name"
        style="@style/App.TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/product_image"
        android:layout_toEndOf="@id/product_image"
        tools:text="Brand new PS4 game still sealed - felt off a truck" />

    <TextView
        android:id="@+id/product_price"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="2dp"
        android:drawableEnd="@drawable/republic_credit_small"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/republic_credit_small"
        android:gravity="bottom"
        android:maxLines="1"
        android:textColor="@color/secondary_text"
        android:layout_below="@id/product_name"
        android:layout_alignLeft="@id/product_name"
        android:layout_alignStart="@id/product_name"
        tools:text="123" />
</RelativeLayout>