<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    tools:context=".view.MainActivity"
    tools:layout_width="220dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            tools:background="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/product_name"
            style="@style/App.TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Brand new PS4 game still sealed - felt off a truck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/product_price"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/default_margin_half"
            android:textColor="@color/secondary_text"
            android:drawableRight="@drawable/republic_credit_small"
            android:drawableEnd="@drawable/republic_credit_small"
            android:drawablePadding="2dp"
            android:maxLines="1"
            tools:text="123" />
        </LinearLayout>

        <ImageView
            android:id="@+id/product_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:paddingLeft="@dimen/default_margin_half"
            android:paddingRight="@dimen/default_margin_half"
            android:src="@color/item_product_divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_cart"
                android:layout_width="@dimen/min_touch_area"
                android:layout_height="@dimen/min_touch_area"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/shopping_cart_icon_state_selector" />

            <ImageView
                android:id="@+id/product_favorite"
                android:layout_width="@dimen/min_touch_area"
                android:layout_height="@dimen/min_touch_area"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/favorite_icon_state_selector" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

